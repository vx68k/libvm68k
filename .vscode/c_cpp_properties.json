    "configurations": [
        {
            "name": "POSIX (GCC)",
            "compilerPath": "gcc",
            "includePath": [
                "${workspaceFolder}",
                "${workspaceFolder}/libvm68kapi",
                "${workspaceFolder}/libvm68k"
            ],
            "defines": [
                "HAVE_CONFIG_H"
            ],
            "cStandard": "c11",
